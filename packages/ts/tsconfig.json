{
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "dist",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strict": true,
        "noImplicitAny": true,
        "inlineSourceMap": true,
        "preserveSymlinks": true,
        "declaration": true,
        "importHelpers": true,
        "target": "es2016",
        "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": [
        "node_modules"
    ]
}