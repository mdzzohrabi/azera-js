{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "outDir": "./build",
        "declaration": true,
        "importHelpers": true,
        "inlineSourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "preserveSymlinks": true,
        "strict": true,
        "noUnusedLocals": true
    },
    "include": ["./src"],
    "exclude": [
        "node_modules",
        "./src/tests"
    ]
}