{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strict": true,
        "declaration": true,
        "outDir": "dist",
        "module": "commonjs",
        "target": "es2017",
        "skipLibCheck": true,
        "importHelpers": true,
        "strictFunctionTypes": false,
        "inlineSourceMap": true,
        "noImplicitAny": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}