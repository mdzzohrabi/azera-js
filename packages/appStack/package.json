{
	"name": "@azera/stack",
	"version": "1.2.1",
	"description": "Azera Web Framework",
	"main": "dist/index.js",
	"author": "Masoud Zohrabi <mdzzohrabi@gmail.com>",
	"license": "MIT",
	"bin": {
		"stack": "./bin/stack.js"
	},
	"files": [
		"dist/**/*",
		"*.MD",
		"tsconfig.json",
		"default.config.yml",
		"bin/**/*.js"
	],
	"scripts": {
		"bundle": "parcel src/index.ts --out-dir=./bundle --target=node --bundle-node-modules",
		"watch": "tsc -w",
		"build": "rimraf ./dist && tsc",
		"test": "sh ./scripts/test.sh",
		"test:watch": "sh ./scripts/test-watch.sh",
		"test-all": "mocha",
		"test-cover": "nyc mocha",
		"stack": "node bin/stack",
		"postinstall": "yarn stack init"
	},
	"dependencies": {
		"@apollo/server": "^5.1.0",
		"@as-integrations/express5": "^1.1.2",
		"@azera/container": "^2.1.5",
		"@azera/reflect": "^1.0.9",
		"@azera/util": "^1.0.18",
		"@types/deep-extend": "^0.6.0",
		"@types/express": "^5.0.5",
		"@types/express-fileupload": "^1.4.1",
		"@types/js-yaml": "^4.0.5",
		"@types/jsonwebtoken": "^9.0.2",
		"@types/node": "^24.9.2",
		"@types/twig": "^1.12.9",
		"commander": "^14.0.2",
		"deep-extend": "^0.6.0",
		"express": "^5.1.0",
		"express-fileupload": "^1.4.0",
		"express-validator": "^7.0.1",
		"glob": "^11.0.0",
		"http-proxy-agent": "^7.0.0",
		"https-proxy-agent": "^7.0.0",
		"js-yaml": "^4.0.0",
		"jsonwebtoken": "^9.0.0",
		"reflect-metadata": "^0.2.2",
		"source-map-support": "^0.5.21",
		"tslib": "^2.5.3",
		"twig": "^1.16.0",
		"winston": "^3.9.0"
	},
	"devDependencies": {
		"@graphql-tools/schema": "^10.0.0",
		"@graphql-tools/utils": "^10.0.0",
		"@types/amqplib": "^0.10.1",
		"@types/bun": "^1.3.1",
		"@types/chai": "^5.2.3",
		"@types/mocha": "^10.0.1",
		"@types/nodemailer": "^7.0.3",
		"amqplib": "^0.10.3",
		"chai": "^6.2.0",
		"graphql": "^16.6.0",
		"jest": "^30.2.0",
		"mocha": "^11.7.4",
		"mongodb": "^6.8.0",
		"mongoose": "^8.5.2",
		"node-watch": "^0.7.3",
		"nodemailer": "^7.0.10",
		"nyc": "^17.0.0",
		"redis": "^5.9.0",
		"rimraf": "^6.0.1",
		"ts-jest": "^29.1.0",
		"ts-node": "^10.9.1",
		"typeorm": "^0.3.16",
		"typescript": "^5.1.3"
	},
	"nyc": {
		"extension": [
			".ts",
			".tsx"
		],
		"exclude": [
			"**/*.d.ts"
		],
		"reporter": [
			"html"
		],
		"all": true
	}
}
