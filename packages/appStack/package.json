{
	"name": "@azera/stack",
	"version": "1.1.24",
	"description": "Azera Web Framework",
	"main": "dist/index.js",
	"author": "Masoud Zohrabi <mdzzohrabi@gmail.com>",
	"license": "MIT",
	"bin": {
		"stack": "./bin/stack.js"
	},
	"files": [
		"dist/**/*",
		"*.MD",
		"tsconfig.json",
		"default.config.yml",
		"bin/**/*.js"
	],
	"scripts": {
		"bundle": "parcel src/index.ts --out-dir=./bundle --target=node --bundle-node-modules",
		"watch": "tsc -w",
		"build": "rimraf ./dist && tsc",
		"test": "sh ./scripts/test.sh",
		"test:watch": "sh ./scripts/test-watch.sh",
		"test-all": "mocha",
		"test-cover": "nyc mocha",
		"stack": "node bin/stack",
		"postinstall": "yarn stack init"
	},
	"dependencies": {
		"@azera/container": "^2.1.2",
		"@azera/reflect": "^1.0.9",
		"@azera/util": "^1.0.18",
		"@types/body-parser": "^1.19.0",
		"@types/deep-extend": "^0.4.31",
		"@types/express": "^4.17.6",
		"@types/express-fileupload": "^1.1.3",
		"@types/js-yaml": "^4.0.0",
		"@types/jsonwebtoken": "^8.5.0",
		"@types/microtime": "^2.1.0",
		"@types/twig": "^1.12.4",
		"body-parser": "^1.19.0",
		"commander": "^8.1.0",
		"deep-extend": "^0.6.0",
		"express": "^4.17.1",
		"express-fileupload": "^1.2.0",
		"express-validator": "^6.5.0",
		"http-proxy-agent": "^4.0.1",
		"https-proxy-agent": "^5.0.0",
		"js-yaml": "^4.0.0",
		"jsonwebtoken": "^8.5.1",
		"reflect-metadata": "^0.1.13",
		"source-map-support": "^0.5.19",
		"spdy": "^4.0.2",
		"tslib": "^2.0.0",
		"twig": "^1.15.3",
		"winston": "^3.2.1"
	},
	"devDependencies": {
		"@types/amqplib": "^0.8.2",
		"@types/chai": "^4.2.11",
		"@types/mocha": "^9.0.0",
		"@types/mongoose": "^5.10.0",
		"@types/node": "^14.0",
		"@types/nodemailer": "^6.4.0",
		"@types/redis": "^2.8.28",
		"amqplib": "^0.8.0",
		"apollo-server": "^2.0",
		"apollo-server-express": "^2.0",
		"chai": "^4.2.0",
		"graphql": "^15.4.0",
		"jest": "^27.1.1",
		"mocha": "^9.1.1",
		"mongodb": "^4.1.1",
		"mongoose": "^6.0.5",
		"node-watch": "^0.7.0",
		"nodemailer": "^6.4.17",
		"nyc": "^15.1.0",
		"parcel-bundler": "^1.12.4",
		"redis": "^3.0.2",
		"rimraf": "^3.0.2",
		"ts-jest": "^27.0.5",
		"ts-node": "^10.2.1",
		"typeorm": "^0.2.29",
		"typescript": "^4.0.5"
	},
	"resolutions": {
		"node-forge": "0.10.0"
	},
	"nyc": {
		"extension": [
			".ts",
			".tsx"
		],
		"exclude": [
			"**/*.d.ts"
		],
		"reporter": [
			"html"
		],
		"all": true
	}
}
