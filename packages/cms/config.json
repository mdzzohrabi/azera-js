{
    "$schema": "./config.schema.json",
	"$imports": "@azera/stack/config.yml",
	"config": { "allowExtra": false },
	"parameters": {
        "httpPort": 8090
    },
    "web": {
        "routes": {
            "$imports": "./config/routes.yml",
            "/": {
                "controller": "/Controller/IndexController"
            },
            "/public": {
                "resource": "./public",
                "type": "static"
            }
        }
    },
	"services": [
		"/Command/RunCommand",
		"/Command/DumpParametersCommand",
		"/Controller/IndexController"
    ],
	"kernel": {
        "cacheConfig": false
	}
}